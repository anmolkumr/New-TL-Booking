<!DOCTYPE html>
<html>

<head>
    <title>Convert Datetimes to UTC</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
       
        function convertToUTC() {
            // Get the form values
            const user = document.getElementById('userInput').value;
            const startTime = document.getElementById('startTimeInput').value;
            const endTime = document.getElementById('endTimeInput').value;
            const status = document.getElementById('statusInput').value;

            // Convert the start and end times to UTC using Moment.js
            const utcStartTime = moment(startTime).utc().format();
            const utcEndTime = moment(endTime).utc().format();
            console.log(utcStartTime);
            console.log(utcEndTime);

            // Send the UTC values and user to the Node.js backend
            fetch('/sign_up', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ user, utcStartTime, utcEndTime, status })
            })
                .then(response => response.text()) // Extract the response text
                .then(data => {
                     Swal.fire({
                        title: data,
                       
                        confirmButtonText: 'Okay'
                    })
                    //Swal.fire('Response from backend: ' + data);  Display the response in an alert dialog
                })
                .catch(error => {
                    alert('Error:', error);
                });
        }
    </script>
</head>

<body>
    <h1>Convert Datetimes to UTC</h1>
    <form>
        <label for="userInput">User:</label>
        <input type="text" id="userInput" value="test1">
        <label for="startTimeInput">Start Time:</label>
        <input type="datetime-local" id="startTimeInput">
        <label for="endTimeInput">End Time:</label>
        <input type="datetime-local" id="endTimeInput">
        <label for="statusInput">Status:</label>
        <input type="text" id="statusInput" value="Approved">
        <button type="button" onclick="convertToUTC()">Convert and Submit</button>
    </form>
</body>

</html>